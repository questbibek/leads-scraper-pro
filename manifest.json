{
    "manifest_version": 3,
    "name": "Google Maps Easy Scrape",
    "version": "2.0",
    "description": "Google Maps Easy Scrape with Persistent Sidebar by Mike Powers",
    "permissions": ["activeTab", "scripting", "storage"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://www.google.com/maps/*"],
        "js": ["content.js"],
        "css": ["sidebar.css"],
        "run_at": "document_idle"
      }
    ],
    "icons": {
      "16": "map.png",
      "48": "map.png",
      "128": "map.png"
    }
  }
